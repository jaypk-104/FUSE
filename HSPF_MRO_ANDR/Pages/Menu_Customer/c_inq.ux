                                                <Change chk_line_usr.Value="{ReadProperty USR_ID}" />
                                            </WhileSelected>

                                            <Tapped>
                                                <ToggleSelection />
                                            </Tapped>
                                        </DockPanel>
                                    
                                        <Selection ux:Name="pizzaSel" MinCount="1" MaxCount="1" />

                                        <DockPanel>
                                            <ScrollView Dock="Fill" Alignment="Default">
                                                <StackPanel ItemSpacing="5" Padding="10, 10">
                                                    <Each Items="{line_list}">
                                                        <ListType_inq USR_NM="{line_nm}" USR_ID="{line_id}" />
                                                    </Each>
                                                </StackPanel>
                                            </ScrollView>
                                            <DockPanel Dock="Bottom" Height="40" Alignment="Center" Margin="0, 0, 0, 5">
                                                <Rectangle Color="#AFA" Width="60" Alignment="Default" CornerRadius="10" Height="30" Dock="Left" Margin="0, 0, 5, 0" Clicked="{line_ok_btn}">
                                                    <Button Dock="Left" Alignment="Default">
                                                        <Text Value="추 가" Alignment="Center" Font="AGOTHIC14" />
                                                        <Clicked>
                                                        <Set line_pop_inq.Visibility="Hidden" />
                                                        </Clicked>
                                                    </Button>
                                                </Rectangle>
                                                <Rectangle Color="#F1F0F0" Width="60" Alignment="Default" CornerRadius="10" Height="30" Dock="Left">
                                                    <Button Dock="Left" Alignment="Default">
                                                        <Text Alignment="Center" Font="AGOTHIC14" Value="닫 기" />
                                                        <Clicked>
                                                            <Set line_pop_inq.Visibility="Hidden" />
                                                        </Clicked>
                                                    </Button>
                                                </Rectangle>
                                            </DockPanel>
                                        </DockPanel>
                                        <Stroke Width="1" Color="#B1B2BC" />
                                    </Rectangle>
                                    <!-- 결재자추가 팝업 끝 -->

                                    <DockPanel Dock="Top"  ux:Name="linePanel">
                                        <DockPanel Dock="Top" Height="160">
                                            <DockPanel Dock="Top" Margin="0, 0, 0, 5" Height="15">
                                                <Text Dock="Left" Value="순번" Font="AGOTHIC14" FontSize="14" Width="10%" Color="#000" TextAlignment="Left" />
                                                <Text Dock="Left" Value="결의자ID" Font="AGOTHIC14" FontSize="14" Width="20%" Color="#000" />
                                                <Text Dock="Left" Value="결의자명" Font="AGOTHIC14" FontSize="14" Width="20%" Color="#000" />
                                                <Text Dock="Left" Value="직급" Font="AGOTHIC14" FontSize="14" Width="20%" Color="#000" />
                                                <Text Dock="Left" Value="부서명" Font="AGOTHIC14" FontSize="14" Width="20%" Color="#000" />
                                                <Text Dock="Left" Value="" Font="AGOTHIC14" FontSize="14" Width="10%" Color="#000" />
                                            </DockPanel>
                                            <ScrollView Dock="Top" Height="100">
                                                <DockPanel Dock="Top">
                                                    <Each Items="{line_list_added}">
                                                        <DockPanel Dock="Top" Margin="0, 0, 0, 7">
                                                                <Text Dock="Left" Value="{added_seq}" Font="AGOTHIC14" FontSize="13" Width="10%" Alignment="Center" Padding="0, 0, 0, 0" Margin="0, 0, 0, 0" TextAlignment="Center" />
                                                                <Text Dock="Left" Value="{added_id}" Font="AGOTHIC14" FontSize="13" Width="20%" Alignment="Center" />
                                                                <Text Dock="Left" Value="{added_nm}" Font="AGOTHIC14" FontSize="13" Width="20%" Alignment="CenterLeft" />
                                                                <Text Dock="Left" Value="{added_jikgub}" Font="AGOTHIC14" FontSize="13" Width="20%" Alignment="CenterLeft" />
                                                                <Text Dock="Left" Value="{added_dept_nm}" Font="AGOTHIC14" FontSize="13" Width="20%" Alignment="CenterLeft" />
                                                                <Button Dock="Left" Width="10%" Clicked="{remove_line}">
                                                                    <Image File="../../Assets/Icons/remove.png" Width="15" Height="30" />
                                                                </Button>
                                                        </DockPanel>
                                                    </Each>
                                                </DockPanel>
                                            </ScrollView>
                                            <Button Dock="Bottom" Clicked="{addBtn2}" Height="50" Alignment="TopCenter">
                                                <Grid RowCount="1" ColumnCount="2" Columns="auto, 30">
                                                        <Text Value="결의자추가" Alignment="Center" FontSize="13" Font="AGOTHIC14">
                                                        <Clicked>
                                                            <Set line_pop_inq.Visibility="Visible" />
                                                        </Clicked>
                                                        </Text>
                                                        <Image File="../../Assets/Icons/add.png" Width="30" Height="30" Alignment="CenterLeft" Margin="-5, 0, 0, 0">
                                                            <Clicked>
                                                                
                                                                    <Set line_pop_inq.Visibility="Visible" />
                                                                
                                                            </Clicked>
                                                        </Image>
                                                </Grid>
                                            </Button>
                                            
                                        </DockPanel>
                                    </DockPanel>

                                    <Rectangle Dock="Top" Padding="7,7,7,7" Background="#EAEBF8" ux:Name="contentPanel">
                                        <ScrollView Padding="0, 0, 0, 0" Dock="Top" Alignment="Default" SnapMinTransform="False" SnapMaxTransform="True">
