                                <Text TextAlignment="Left" Alignment="TopLeft" Value="BACK" TextWrapping="NoWrap" FontSize="18" Margin="25, 5, 0, 0" Height="25" Color="#00000059" />
                            </Button>
                            <DockPanel Dock="Top" Alignment="Right">
                             
                                <Rectangle Width="120" Height="40" Dock="Left" CornerRadius="10" Margin="0, 0, 10, 0">
                                    <Button Dock="Left" Clicked="{sendBtn}" Width="120" Height="50" Alignment="Default">
                                        <Grid RowCount="1" ColumnCount="2" Columns="50, auto">
                                            <Image File="../../Assets/Icons/check.png" Width="50" Height="50" Alignment="CenterLeft" />
                                            <Text Value="견적의뢰" Color="#5600ea" Alignment="CenterLeft" Font="AGOTHIC14" />
                                        </Grid>
                                    </Button>
                                    <WhilePressed>
                                        <Scale Factor=".95" Duration=".08" Easing="QuadraticOut" />
                                    </WhilePressed>
                                    <Stroke Width="1" Color="#5600ea" />
                                </Rectangle>
                                
                                <WrapPanel Dock="Left" Orientation="Vertical" Alignment="CenterLeft" Margin="0, 0, 0, 0" Height="40">
                                    <Text Dock="Top" Value="회신요청일" Margin="0, 0, 0, 0" Font="AGOTHIC14" Alignment="Default" TextAlignment="Left" FontSize="11" />
                                    <Text Dock="Top" ux:Name="inq_hope_dt" Value="{inq_hope_dt}" Alignment="Default" TextAlignment="Left" Margin="0, 0, 0, 0" Clicked="{clk_inq_dt}" Font="AGOTHIC14" FontSize="13" />
                                </WrapPanel>
                                <Image File="../../Assets/Icons/date1.png" Width="40" Height="40" Alignment="CenterRight" Clicked="{clk_inq_dt}" Margin="0, -13, 0, 0" Dock="Left" />
                            </DockPanel>
                            </DockPanel>
                            <ScrollView Height="85%" Alignment="Default" Dock="Top" Margin="0, 0, 0, 0" SnapMinTransform="False" Padding="0, 0, 0, 0">
                                <DockPanel>
                                    <Each Items="{items2}">
                                        <Rectangle Padding="5, 10, 5, 5" Dock="Top" Alignment="Default" Margin="0, 8, 0, 0">
                                            
                                            <Image File="../../Assets/Icons/x_s.png" Width="20" Height="20" Alignment="TopRight" Color="#C2B6DD" Dock="Top" Clicked="{delBtn}" Margin="0, -3, 0, 0" />
                                            <Grid ColumnCount="2" Columns="1*, 2*" DefaultRow="auto" CellSpacing="5" Dock="Fill">
                                                <Text Value="품목코드" Font="AGOTHIC14" TextAlignment="Right" Alignment="CenterRight" Margin="0, 0, 10, 0" FontSize="14" />
                                                <TextInput TextWrapping="Wrap" Font="AGOTHIC14" TextAlignment="Left" Alignment="Default" Value="{ITEM_CD}" FontSize="14" />
                                                <Rectangle ColumnSpan="2" Height="1" Color="#C2B6DD" />
                                                <Text Value="품명" Font="AGOTHIC14" TextAlignment="Right" Margin="0, 0, 10, 0" FontSize="14" Alignment="CenterRight" />
                                                <TextInput PlaceholderText="*" PlaceholderColor="#E09A9A" TextWrapping="Wrap" Font="AGOTHIC14" Value="{ITEM_NM}" FontSize="14" />
                                                <Rectangle ColumnSpan="2" Height="1" Color="#C2B6DD" />
                                                <Text Value="규격" Font="AGOTHIC14" TextAlignment="Right" Margin="0, 0, 10, 0" FontSize="14" Alignment="CenterRight" />
                                                <TextInput PlaceholderText="*" PlaceholderColor="#E09A9A" TextWrapping="Wrap" Font="AGOTHIC14" Value="{SPEC}" FontSize="14" />
                                                <Rectangle ColumnSpan="2" Height="1" Color="#C2B6DD" />
                                                <Text Value="제조사" Font="AGOTHIC14" TextAlignment="Right" Margin="0, 0, 10, 0" FontSize="14" Alignment="CenterRight" />
                                                <TextInput PlaceholderText="*" PlaceholderColor="#E09A9A" TextWrapping="Wrap" Font="AGOTHIC14" Value="{MAKER}" FontSize="14" />
                                                <Rectangle ColumnSpan="2" Height="1" Color="#C2B6DD" />
                                                <Text Value="단위" Font="AGOTHIC14" TextAlignment="Right" Margin="0, 0, 10, 0" FontSize="14" Alignment="CenterRight" />
                                                <TextInput PlaceholderText="*" PlaceholderColor="#E09A9A" TextWrapping="Wrap" Font="AGOTHIC14" Value="{UNIT}" FontSize="14" />
                                                <Rectangle ColumnSpan="2" Height="1" Color="#C2B6DD" />
                                                <Text Value="견적수량" Font="AGOTHIC14" TextAlignment="Right" Margin="0, 0, 10, 0" Alignment="CenterRight" FontSize="14" />
                                                <TextInput PlaceholderText="* 숫자만 입력" InputHint="Number" PlaceholderColor="#E09A9A" TextWrapping="Wrap" Font="AGOTHIC14" Value="{QTY}" FontSize="14" />
                                                <Rectangle ColumnSpan="2" Height="1" Color="#C2B6DD" />
                                                <Text Value="비고" Font="AGOTHIC14" TextAlignment="Right" Margin="0, 0, 10, 0" Alignment="CenterRight" FontSize="14" />
                                                <TextInput TextWrapping="Wrap" Font="AGOTHIC14" Value="{REMARK}" FontSize="14" />
                                                <Rectangle ColumnSpan="2" Height="1" Color="#C2B6DD" />
                                                <Text Value="이미지첨부" Font="AGOTHIC14" TextAlignment="Right" Margin="0, 0, 10, 0" Alignment="CenterRight" FontSize="14" />
                                                <DockPanel>
                                                    <Text Alignment="CenterLeft" Dock="Left" FontSize="11" TextAlignment="Left" TextWrapping="Wrap" Value="{imgFileName}" Clicked="{imgClick}" />
                                                    <DockPanel Dock="Right">
                                                            <Image File="../../Assets/Icons/camera.png" Dock="Left" Color="#282828CE" Margin="0, 0, 0, 0" StretchSizing="Zero" StretchDirection="Both" StretchMode="Uniform" Alignment="CenterRight" Width="16" Clicked="{camBtn}" />
                                                            <Text Value="카메라" Margin="0, 0, 5, 0" Color="#282828CE" FontSize="11" Font="AGOTHIC14" Clicked="{camBtn}" Alignment="CenterRight" Dock="Left" />
                                                            <Image File="../../Assets/Icons/gallery.png" Dock="Left" Width="16" Color="#282828CE" Alignment="CenterRight" Clicked="{galBtn}" />
                                                            <Text Value="갤러리" Margin="0, 0, 5, 0" Color="#282828CE" FontSize="11" Font="AGOTHIC14" Alignment="CenterRight" Dock="Left" Clicked="{galBtn}" />
                                                    </DockPanel>
                                                </DockPanel>
                                            </Grid>
                                            <Stroke Width="2" Color="#9082B1" />
                                        </Rectangle>
                                    </Each>
                                    <Button Dock="Bottom" Clicked="{addBtn}" Height="50" Alignment="TopCenter">
                                        <Grid RowCount="1" ColumnCount="2" Columns="auto, 50">
                                                <Text Value="행추가" Alignment="Center" />
                                                <Image File="../../Assets/Icons/add.png" Width="40" Height="50" Alignment="CenterLeft" Margin="-5, 0, 0, 0" />
                                        </Grid>
                                    </Button>
                                </DockPanel>
                            </ScrollView>
                                
                                        

                                
                            </DockPanel>
                        </Page>
                        </Navigator>
                    <WhileActive Threshold="0.5">
                        <Set indicator_1.LayoutMaster="page2Tab_1" />
                        <Set indicator_1.Color="#8458d1" /> 
                        <Set tab1_1.Background="#8b72c2" />
                        <Set tab2_1.Background="#ffffff" />
                        <Set tab1_1.Color="#ffffff" />
                        <Set tab2_1.Color="#000000" />
                    </WhileActive>
                </Page>
                
                <!--page1 backup-->
                <Page ux:Name="page1_1" Background="#ffffff" Padding="0, 10, 0, 10" Alignment="Default">
                    <!--Navigator DefaultPath="subPage_appr"-->
                    
                    <Router ux:Name="router_inq" />
                    <Navigator DefaultPath="inqPage01">
                        <!-- <SubPage_appr /> -->
                        <Page ux:Template="inqPage01">
                            <WhileTrue Value="{pop_appr}" ux:Name="pop_appr">
                                <DockPanel Height="100%" Background="#F2F3F8" Padding="7,7,7,7">
                                    <!-- 결재자추가 팝업 사작 -->

                                    <Rectangle ux:Name="line_pop_inq" Dock="Top" Layer="Overlay" Color="#EBEBEB" Width="70%" Height="70%" Alignment="Top" Visibility="Hidden">
                                        <DockPanel ux:Class="ListType_inq" Padding="5" Alignment="Default" Margin="0, 0, 0, 5">
                                            <string ux:Property="USR_NM" />
                                            <string ux:Property="USR_ID" />
                                            
                                            <Selectable Value="{ReadProperty USR_NM}" />
                                            <Rectangle ux:Name="theBack" Layer="Background" CornerRadius="5" Color="#FFF" Height="40" Margin="0, 0, 0, 0" />
                                            
                                            <Image ux:Name="theCheck" Dock="Right" File="../../Assets/Icons/check.png" Color="#060" Visibility="Hidden" Width="20" />
