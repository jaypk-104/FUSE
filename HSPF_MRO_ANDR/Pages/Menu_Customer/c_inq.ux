                                    <Router ux:Name="router_cal" />
                                        <Navigator DefaultPath="calendar">
                                            <CalendarView router="router_cal" ux:Template="calendar" />
                                        </Navigator>
                                </ClientPanel>
                            </WhileTrue>
                            <DockPanel Dock="Top">
